    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.liuziyuan</groupId>
    <artifactId>retrofit-core</artifactId>
    <version>1.1.2-SNAPSHOT</version>

    <name>${project.groupId}:${project.artifactId}</name>
